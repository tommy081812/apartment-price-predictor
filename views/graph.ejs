    <script>
        console.log(date_labels);
        var <%="myChart"+i%> = new Chart(
            document.getElementById("<%="myChart"+i%>"),
            { type: 'line',
            data: {
                    labels: date_labels,
                    datasets: [{label: "House Price",
                                data: price_data,
                                backgroundColor: 'rgb(255, 99, 132)',
                                borderColor: 'rgb(255, 99, 132)',
                                }]
                },
            options: {plugins: {title: {
                            display: true,
                            text: "Area: " + size + " m^2",
                            }   
                    },
                scales: {
                        x: {
                            display: true,
                            title: {
                            display: true,
                            text: 'Year' },
                            type: 'time',
                            time: {
                                format: 'yyyy-MM-dd'
                                }
                        },
                        y: {
                            display: true,
                            title: {
                            display: true,
                            text: 'Sold Price in 10,000KRW'
                            }
                        }
                    }
                }
            });
